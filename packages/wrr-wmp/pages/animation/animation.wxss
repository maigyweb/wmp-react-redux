.wrapper {
  min-height: 100vh;
  padding: 20px 10px;
}

.top {
  font-size: 12px;
  color: #A9A9A9;
  overflow: hidden;
  border: 1px solid;
  transition: height 1s;
  -moz-transition: height 1s; /* Firefox 4 */
  -webkit-transition: height 1s; /* Safari and Chrome */
  -o-transition: height 1s;
}

.button {
  text-align: center;
  font-size: 12px;
  color: #FF69B4;
}